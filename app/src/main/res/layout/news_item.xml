<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_urlToImage"
        android:layout_width="116dp"
        android:layout_height="235dp"
        android:layout_above="@+id/tv_author"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="-146dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="228dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/iv_urlToImage"
        android:text="@string/tv_title" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="179dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="45dp"
        android:layout_toStartOf="@+id/tv_newsDate"
        android:text="@string/tv_author" />

    <TextView
        android:id="@+id/tv_newsDate"
        android:layout_width="142dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"
        android:text="@string/tv_newsDate" />
</RelativeLayout>